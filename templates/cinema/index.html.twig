              <ul class="s-link">
                <!-- <li class="s-links"> <a href="#"><i class="fa fa-facebook"></i> </a></li> -->
                <li class="s-links"> <a href="{{path('salle_de_projection')}}">Salle de projection</a> </li>
             
              </ul>
            </div>
          </div>
        </div>
      </div>
      
    </div>
    {% endfor %}
  </div>
</div>

{% endblock %}
