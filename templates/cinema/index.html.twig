{% extends 'base.html.twig' %}

{% block title %}Hello CinemaController!{% endblock %}

{% block body %}



<section>
  <div id="map"></div>

  <!-- Async script executes immediately and must be after any DOM elements used in callback. -->
   <script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCRG2DtlyXUkFds-AVsYJwJv6LADCP0eb4&callback=initMap&v=weekly"
      async
    ></script>
    <script>
    function initMap() {
  const myLatLng = { lat: 36.8064835, lng: 10.1815426 };
  const sfaxLatLng = { lat: 34.7230787, lng: 10.335875 };
  const djerbaLatLng = { lat: 33.7733906, lng: 10.8859041 };
  const map = new google.maps.Map(document.getElementById("map"), {
    zoom: 4,
    center: myLatLng,
  });

  new google.maps.Marker({
    position: myLatLng,
    map,
    title: "Tunis",
  });
  new google.maps.Marker({
    position: sfaxLatLng,
    map,
    title: "Sfax",
  });
  new google.maps.Marker({
    position: djerbaLatLng,
    map,
    title: "Djerba",
  });
}
    </script>
   

 
</section>






<body>
<!-- header -->
<div class="flip">
  <div class="container-1">
  {% for item in cinema %}
    
    <div class="row">
      <div class="cal-4">
      <div><h1>DÉCOUVRIR NOTRE CINEMA</h1></div>
